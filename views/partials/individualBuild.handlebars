<div id="{{makeBuildId}}" class="{{overallBuildStatusColor}}">
  <section class="tile tile--pass row {{overallBuildStatus}}">
    <div class="tile-status">
      <span class="icon icon-status {{overallBuildStatus}}"></span>
      <span class="request-kind {{kind}} icon"></span>
    </div>

    <div class="tile-main medium-8 columns">
      <h2 class="repo-main-commit">
        <small class="repo-main-branch" title="{{branch}}">{{branch}}</small>
          {{commitMessage}}
      </h2>
      <div class="repo-main-description">
<!---->        <pre class="body">{{commitBody}}</pre>
      </div>
      <div class="tile-author">
         <img src="{{authorGravatarURL}}">{{authorName}} authored and committed
<!---->      </div>
    </div>

    <div class="tile-additional medium-4 columns end">
      <ul class="repo-main-info">
        <li class="repo-build-status"><a id="ember8127" class="ember-view active" href="/angular/angular/builds/62318623">
          <span class="icon icon--hash"></span>
          {{buildId}} {{overallBuildStatus}}</a>
        </li>
        <li>
          <a class="commit" href="{{githubCommitURL}}">
            <span class="icon icon--github"></span>
            Commit {{githubCommitNumber}}
          </a>
        </li>
        <li>
              <a class="compare" href="{{githubCompareURL}}">
              <span class="icon icon--github"></span>
              Compare {{githubCompareNumber}}</a>
        </li>
        <li>
          <span class="icon icon--clock"></span>
          ran for {{totalRunningTime}}
        </li>
        <li title="{{timeStarted}}">
          <span class="icon icon--cal"></span>
          about {{timeStartedAgo}}
        </li>
      </ul>
    </div>
  </section>
</div>

